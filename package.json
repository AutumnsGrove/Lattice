{
	"name": "@autumnsgrove/lattice-monorepo",
	"version": "1.0.0",
	"private": true,
	"license": "AGPL-3.0-only",
	"author": "AutumnsGrove",
	"packageManager": "pnpm@9.15.0",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AutumnsGrove/Lattice.git"
	},
	"type": "module",
	"scripts": {
		"test": "pnpm -r run test:run",
		"test:watch": "pnpm -r run test",
		"test:engine": "pnpm --filter @autumnsgrove/lattice test:run",
		"test:landing": "pnpm --filter grove-landing test:run",
		"test:plant": "pnpm --filter grove-plant test:run",
		"test:clearing": "pnpm --filter grove-clearing test:run",
		"test:heartwood": "pnpm --filter grove-heartwood test:run",
		"test:router": "pnpm --filter grove-router test:run",
		"test:shell": "bats scripts/repo/tests/",
		"email:preview": "NODE_PATH=libs/engine/node_modules bun run scripts/email/preview.tsx",
		"lint": "oxlint . && eslint .",
		"lint:strict": "oxlint --deny-warnings && eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"devDependencies": {
		"@eslint/js": "^9.0.0",
		"eslint": "^9.0.0",
		"globals": "^16.0.0",
		"eslint-plugin-oxlint": "^1.48.0",
		"eslint-plugin-svelte": "^2.46.0",
		"oxlint": "^1.0.0",
		"prettier": "^3.5.0",
		"prettier-plugin-svelte": "^3.4.0",
		"sharp": "^0.34.5",
		"svelte-eslint-parser": "^0.43.0",
		"typescript-eslint": "^8.0.0",
		"wrangler": "^4.64.0"
	},
	"main": "./libs/engine/dist/index.js",
	"types": "./libs/engine/dist/index.d.ts",
	"svelte": "./libs/engine/dist/index.js",
	"exports": {
		".": {
			"types": "./libs/engine/dist/index.d.ts",
			"svelte": "./libs/engine/dist/index.js",
			"default": "./libs/engine/dist/index.js"
		},
		"./components/custom/*": {
			"types": "./libs/engine/dist/components/custom/*.svelte.d.ts",
			"svelte": "./libs/engine/dist/components/custom/*.svelte"
		},
		"./components/admin/*": {
			"types": "./libs/engine/dist/components/admin/*.svelte.d.ts",
			"svelte": "./libs/engine/dist/components/admin/*.svelte"
		},
		"./components/gallery/*": {
			"types": "./libs/engine/dist/components/gallery/*.svelte.d.ts",
			"svelte": "./libs/engine/dist/components/gallery/*.svelte"
		},
		"./components/ui": {
			"types": "./libs/engine/dist/components/ui/index.d.ts",
			"svelte": "./libs/engine/dist/components/ui/index.js"
		},
		"./utils/*": {
			"types": "./libs/engine/dist/utils/*.d.ts",
			"default": "./libs/engine/dist/utils/*.js"
		},
		"./auth/*": {
			"types": "./libs/engine/dist/auth/*.d.ts",
			"default": "./libs/engine/dist/auth/*.js"
		},
		"./server/*": {
			"types": "./libs/engine/dist/server/*.d.ts",
			"default": "./libs/engine/dist/server/*.js"
		},
		"./payments": {
			"types": "./libs/engine/dist/payments/index.d.ts",
			"default": "./libs/engine/dist/payments/index.js"
		},
		"./payments/*": {
			"types": "./libs/engine/dist/payments/*.d.ts",
			"default": "./libs/engine/dist/payments/*.js"
		},
		"./heartwood": {
			"types": "./libs/engine/dist/heartwood/index.d.ts",
			"default": "./libs/engine/dist/heartwood/index.js"
		},
		"./groveauth": {
			"types": "./libs/engine/dist/heartwood/index.d.ts",
			"default": "./libs/engine/dist/heartwood/index.js"
		}
	},
	"overrides": {
		"@isaacs/brace-expansion": ">=5.0.1",
		"@modelcontextprotocol/sdk": ">=1.24.0",
		"cookie": ">=0.7.0",
		"devalue": ">=5.6.2",
		"esbuild": ">=0.25.0",
		"hono": ">=4.10.3",
		"prismjs": ">=1.30.0",
		"qs": ">=6.14.1",
		"undici": ">=7.18.2"
	},
	"workspaces": [
		"apps/*",
		"services/*",
		"workers/*",
		"libs/*",
		"libs/shutter/cloudflare"
	]
}
