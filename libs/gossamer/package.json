{
	"name": "@autumnsgrove/gossamer",
	"version": "0.2.0",
	"description": "ASCII visual effects library - Threads of light for your web applications",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./svelte": {
			"types": "./dist/svelte/index.d.ts",
			"svelte": "./dist/svelte/index.js",
			"default": "./dist/svelte/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "svelte-package -i src -o dist --watch",
		"build": "svelte-package -i src -o dist",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"clean": "rm -rf dist",
		"prepublishOnly": "pnpm run clean && pnpm run build",
		"export-gif": "tsx scripts/export-gif.ts",
		"export-gif:all": "tsx scripts/export-gif.ts --all",
		"export-gif:random": "tsx scripts/export-gif.ts --random"
	},
	"keywords": [
		"ascii",
		"ascii-art",
		"canvas",
		"visual-effects",
		"animation",
		"graphics",
		"text-art",
		"ambient",
		"texture",
		"pattern",
		"svelte",
		"svelte-5"
	],
	"author": "AutumnsGrove",
	"license": "MIT",
	"homepage": "https://github.com/AutumnsGrove/Gossamer#readme",
	"bugs": {
		"url": "https://github.com/AutumnsGrove/Gossamer/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AutumnsGrove/Gossamer.git"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"peerDependenciesMeta": {
		"svelte": {
			"optional": true
		}
	},
	"devDependencies": {
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "^20.10.0",
		"canvas": "^3.2.1",
		"gif-encoder-2": "^1.0.5",
		"jsdom": "^27.4.0",
		"svelte": "^5.0.0",
		"tsx": "^4.21.0",
		"typescript": "^5.3.0",
		"vite": "^5.0.0",
		"vite-plugin-dts": "^3.7.0",
		"vitest": "^1.0.0"
	}
}
