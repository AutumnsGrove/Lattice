{
  "name": "@groveengine/ui",
  "version": "0.3.1",
  "description": "Grove Design System - A calm, organic component library for the Grove blogging platform",
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "svelte",
    "design-system",
    "components",
    "tailwind",
    "grove",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AutumnsGrove/GroveEngine.git",
    "directory": "packages/ui"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.svelte.d.ts",
      "svelte": "./dist/components/*.svelte",
      "default": "./dist/components/*.svelte"
    },
    "./styles": "./dist/styles/grove.css",
    "./styles/tokens": "./dist/styles/tokens.css",
    "./tailwind": "./dist/tailwind.preset.js",
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "default": "./dist/tokens/index.js"
    },
    "./assets/*": "./dist/assets/*"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package -o dist",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "test": "vitest"
  },
  "peerDependencies": {
    "svelte": "^5.0.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.8.0",
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "svelte": "^5.2.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.0",
    "vite": "^5.4.21",
    "vitest": "^2.0.0"
  }
}
